{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "version": "1.0",
  "description": "Tracks and limits time spent on specific websites.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "background",
    "alarms",
     "webNavigation"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://focus-tracker-1-trs3.onrender.com/*",
    "*://*.instagram.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "frozen.htm", "frozen.html", "camera.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["reloadOnce.js"]
  }
]

}
